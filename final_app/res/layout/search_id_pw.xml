<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/find_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="아이디 찾기"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/find_ID_Name_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <Button
                android:id="@+id/find_ID_Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="#8B673AB7"
                android:text="아이디 찾기"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/find_Pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="비밀번호 찾기"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/find_Pass_Name_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/find_Pass_ID_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="아이디"
                android:inputType="textPersonName"
                android:textSize="24sp" />

            <Button
                android:id="@+id/find_Pass_Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#8B673AB7"
                android:text="비밀번호 찾기"
                android:textSize="24sp" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>